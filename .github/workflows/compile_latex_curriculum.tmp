# https://github.com/habi/latex-test/blob/master/README.md
name: Github Actions CI
on:
  push:
    branches:
      - master
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - name: Set up Git repository
      uses: actions/checkout@v1
    - name: Compile Latex
      uses: xu-cheng/latex-action@master
      with:
        root_file: cv.tex
        working_directory: curriculum
    - name: Check pdf files
      run: |
        file curriculum/cv.pdf | grep -q ' PDF '
    - name: Upload
      run: |
        set -e
        # configure git
        git config --global user.name "Guillaume-Garrigos"
        git config --global user.email "guillaume.garrigos@lpsm.paris"
        # setup ssh
        mkdir ~/.ssh
        chmod 700 ~/.ssh
        echo "$DEPLOY_KEY" > ~/.ssh/id_ed25519
        chmod 600 ~/.ssh/id_ed25519
        git config --global core.sshCommand "ssh -i ~/.ssh/id_ed25519 -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
        git clone --depth=1 --branch gh-pages git@github.com:xu-cheng/latex-tutorial.git "$GITHUB_WORKSPACE/deploy"
        cp -f curriculum/cv.pdf "$GITHUB_WORKSPACE/deploy/cv.pdf"
        cd "$GITHUB_WORKSPACE/deploy"
        git add cv.pdf
        git commit -m "[github actions] deploy"
        git push
      env:
        DEPLOY_KEY: ${{ secrets.DEPLOY_KEY }}
